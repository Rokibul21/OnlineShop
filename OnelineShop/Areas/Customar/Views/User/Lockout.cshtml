@model OnelineShop.Models.ApplicationUser

<h2 class="text-info">Lockout User</h2>
<hr />
<form asp-action="Lockout" method="post" id="user-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3 class="text-danger">
            @ViewBag.Message
        </h3>
        <h3>Do you want to lockout this user?</h3>
        </br>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="UserName" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="FristName" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="FristName" class="form-control" />
                <span asp-validation-for="FristName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="LastName" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Lockout" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,

                    },
                    PasswordHash: {
                        required: true,

                    }
                },
                    messages: {
                        UserName: "Please Enter Your Email",
                        PasswordHash:"Please Enter Your Password",
                    },
            });
        });
    </script>

}
