@model OnelineShop.Models.ApplicationUser

<h2 class="text-info">Add New User</h2>
<hr />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3 class="text-danger">
            @ViewBag.Message
        </h3>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="UserName" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="PasswordHash" class="control-label"></label>
            </div>
            <div class="col-lg-5 ">
                <input asp-for="PasswordHash" type="password" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="FristName" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="FristName" class="form-control"  />
                <span asp-validation-for="FristName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="LastName" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


