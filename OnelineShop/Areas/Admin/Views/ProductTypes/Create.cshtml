@model OnelineShop.Models.ProductTypes

@{
    ViewData["Title"] = "Create";
}
<h2 class="text-info">Add New ProductTypes</h2>
<hr />
<form asp-action="Create">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-lg-2">
                <label asp-for="ProductType" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="ProductType" class="form-control" />
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-4">
                <input type="submit" value="Add New ProductType" class="btn btn-primary" />
                <label></label>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
