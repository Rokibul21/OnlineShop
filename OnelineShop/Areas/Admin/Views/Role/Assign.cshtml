@model OnelineShop.Areas.Admin.Model.RoleViewModel

<h2 class="text-info">Assign Role</h2>
<hr />
<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3 class="text-danger">
            @ViewBag.msg
        </h3>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="UserId" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="RoleId" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Assign" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



