
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3 class="text-danger">
            @ViewBag.Message
        </h3>
        <div class="form-group row">
            <div class="col-lg-2">
                <label>Role Name</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id" />
            <div class="col-lg-5">
                <input id="name" name="name" value="@ViewBag.Name" required="" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,

                    },
                    PasswordHash: {
                        required: true,

                    }
                },
                    messages: {
                        UserName: "Please Enter Your Email",
                        PasswordHash:"Please Enter Your Password",
                    },
            });
        });
    </script>
}

