@model IEnumerable<OnelineShop.Models.Products>

<h2 class="text-info">
    Product List
</h2>
<form method="post">
    <div class="row">
        <div class="col-lg-3">
            <input type="number" name="lowAmount" class="form-control" />
        </div>
        <div class="col-lg-3">
            <input type="number" name="largAmount" class="form-control" />
        </div>
        <div class="col-lg-3">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
        <div class="col-lg-3">
            <a asp-action="Create" class="btn btn-primary">Create New Product</a>
        </div>
    </div>
</form>
<br/>
<div>
    <table class="table border table-striped" id="myTable">
        <thead class="table-info">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductColor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAvilable)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SpacialTag)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductColor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAvilable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductType.ProductType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpacialTag.Name)
                    </td>
                    <td>
                        <partial name="_ButtomViewPartial" model="item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
        $(function () {
            var save = '@TempData["Save"]'
            if (save != null) {
                alertify.success(save);
            }
        })
    </script>
}
