@model OnelineShop.Models.Products

<h2 class="text-info">Add New Products</h2>
<hr />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3 class="text-danger">
            @ViewBag.Message
        </h3>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="Price" class="control-label"></label>
            </div>
            <div class="col-lg-5 ">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="Image" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="ProductColor" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="ProductColor" class="form-control" />
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="IsAvilable" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="IsAvilable" class="" type="checkbox" />
                <span asp-validation-for="IsAvilable" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="ProductTypes" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <select asp-for="ProductTypes" class="form-control" asp-items="ViewBag.ProductTypes"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="SpacilTag" class="control-label"></label>
            </div>
            <div class="col-lg-5">
                <select asp-for="SpacilTag" class="form-control" asp-items="ViewBag.SpacilTag"></select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
