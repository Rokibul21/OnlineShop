@model OnelineShop.Models.Products

<h2 class="text-info">Products Details</h2>
<hr />
<form asp-action="Detail" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-lg-8">
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-lg-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="Price" class="control-label"></label>
                </div>
                <div class="col-lg-8 ">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="Image" class="control-label"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="Image" class="form-control" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>*@
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="ProductColor" class="control-label"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="ProductColor" readonly="readonly" class="form-control" />
                    <span asp-validation-for="ProductColor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="IsAvilable" class="control-label"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="IsAvilable" class="" readonly="readonly"  type="checkbox" />
                    <span asp-validation-for="IsAvilable"  class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="ProductTypes" class="control-label"></label>
                </div>
                <div class="col-lg-8">
                    @*<select asp-for="ProductTypes" class="form-control" asp-items="ViewBag.ProductTypes"></select>*@
                    <input asp-for="ProductTypes" readonly="readonly" class="form-control"  />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="SpacilTag" class="control-label"></label>
                </div>
                <div class="col-lg-8">
                    @*<select asp-for="SpacilTag" class="form-control" asp-items="ViewBag.SpacilTag"></select>*@
                    <input asp-for="SpacialTag" readonly="readonly" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
        <div class="col-lg-1">

        </div>
        <div class="col-lg-3">
            <img src="~/@Model.Image" width="100%" style="border-radius: 5px;border:1px solid #efefef" />
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
